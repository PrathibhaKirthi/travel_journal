<h2 class="mb-4">Your Travel Entries</h2>

<%= form_with url: entries_path, method: :get, local: true, class: "mb-4" do %>
  <div class="input-group">
    <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Search your memories..." %>
    <button class="btn btn-primary">Search</button>
  </div>
<% end %>

<% if @entries.any? %>
  <% @entries.each do |entry| %>
    <div class="card mb-4 shadow-sm">
      <div class="card-body">
        <h5 class="card-title"><%= entry.title %></h5>
        <p class="card-text"><%= truncate(entry.content, length: 140) %></p>
        <div class="d-flex gap-2">
          <%= link_to "Read more", entry, class: "btn btn-sm btn-outline-primary" %>
          <%= link_to "Edit", edit_entry_path(entry), class: "btn btn-sm btn-outline-secondary" %>
          <%= button_to "Delete", entry, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <p class="text-muted">You havenâ€™t added any entries yet.</p>
<% end %>
